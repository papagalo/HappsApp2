<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.happsapp2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EventActivity" />
        <activity
            android:name=".LoginActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectAddEvent"
            android:parentActivityName=".HomeScreenActivity"
            android:theme="@style/AddEventTheme"></activity>
        <activity
            android:name=".AddEditConcertActivity"
            android:parentActivityName=".HomeScreenActivity"
            android:theme="@style/AddEventTheme"></activity>
        <activity
            android:name=".AddEditVideoGameActivity"
            android:parentActivityName=".HomeScreenActivity"
            android:theme="@style/AddEventTheme"></activity>
        <activity
            android:name=".AddEditBoardGameActivity"
            android:parentActivityName=".HomeScreenActivity"
            android:theme="@style/AddEventTheme"></activity>
        <activity
            android:name=".HomeScreenActivity"
            android:theme="@style/AppTheme"
            android:parentActivityName=".LoginActivity"></activity>
        <activity
            android:name=".RegisterUserActivity"
            android:theme="@style/AddEventTheme"
            android:parentActivityName=".LoginActivity"></activity>
        <activity android:name=".ProfileActivity"
            android:theme="@style/AddEventTheme"
            android:parentActivityName=".HomeScreenActivity"></activity>
        <activity android:name=".MyEventsActivity"
            android:theme="@style/AddEventTheme"
            android:parentActivityName=".HomeScreenActivity"></activity>
    </application>

</manifest>